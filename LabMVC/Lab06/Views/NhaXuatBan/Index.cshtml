@{
	Layout = null;
}

@model IEnumerable<Lab06.Models.Entities.NHAXUATBAN>

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>Nhà xuất bản</title>
	@Styles.Render("~/Content/css")
</head>
<body>
	<table class="table table-striped table-bordered">
		<thead>
			<tr>
				<th scope="col" class="text-center">Mã</th>
				<th scope="col" class="text-center">Tên</th>
				<th scope="col" class="text-center">Địa chỉ</th>
				<th scope="col" class="text-center">Điện thoại</th>
				<th scope="col" class="text-center">Danh sách sách</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var nhaXuatBan in Model)
			{
				<tr>
					<td>@nhaXuatBan.MaNXB</td>
					<td>@nhaXuatBan.TenNXB</td>
					<td>@nhaXuatBan.DiaChi</td>
					<td>@nhaXuatBan.DienThoai</td>
					<td><a href="/Sach/TheoNhaXuatBan?MaNXB=@nhaXuatBan.MaNXB">Xem sách</a></td>
				</tr>
			}
		</tbody>
	</table>

	<nav>
		<ul class="pagination justify-content-center">

			@if (ViewBag.Page > 1)
			{
				var pre = ViewBag.Page - 1;

				<li class="page-item">
					<a class="page-link"
					   href="/NhaXuatBan?page=@pre">
						@pre
					</a>
				</li>
			}

			<li class="page-item active">
				<a class="page-link" href="#">@ViewBag.Page</a>
			</li>

			@if (ViewBag.Page < ViewBag.TotalPage)
			{
				var next = ViewBag.Page + 1;
				<li class="page-item">
					<a class="page-link"
					   href="/NhaXuatBan?page=@next">
						@next
					</a>
				</li>
			}
		</ul>
	</nav>

	@Scripts.Render("~/bundles/bootstrap")
</body>
</html>
