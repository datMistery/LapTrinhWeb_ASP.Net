@{
	Layout = null;
}

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>Đăng nhập</title>
	<link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
</head>
<body>

	<div class="container w-50 mt-1 px-1">
		@if (TempData["Error"] != null)
		{
			<div class="alert alert-danger alert-dismissible fade show" role="alert">
				<strong>@TempData["Error"]</strong>
				<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
			</div>
		}
		<form class="border rounded p-2" method="post" action="/Login/Login">
			<h1 class="text-center text-uppercase">Đăng nhập</h1>
			<div class="mb-3 row">
				<label for="username" class="col-md-3 col-form-label fw-bold">Tên đăng nhập: </label>
				<div class="col-md-9">
					<input type="text" name="username" required class="form-control" id="username" value="">
				</div>
			</div>
			<div class="mb-3 row">
				<label for="password" class="col-md-3 col-form-label fw-bold">Mật khẩu: </label>
				<div class="col-md-9">
					<input type="password" name="password" required class="form-control" id="password" value="">
				</div>
			</div>
			<div class="text-center">
				<button id="login-btn" type="submit" class="btn btn-outline-dark">Đăng nhập</button>
			</div>
		</form>
	</div>

	<script src="~/Scripts/bootstrap.js"></script>
	<script src="~/Scripts/jquery-3.6.0.min.js"></script>
</body>
</html>
